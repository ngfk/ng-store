{
    "files.exclude": {
        // Default
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,

        // Directories
        "node_modules": true,

        // Files
        "LICENSE": true,
        "package-lock.json": true
    },

    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,

    // extension: TypescriptHero
    "typescriptHero.resolver.disableImportsSorting": false,
    "typescriptHero.resolver.organizeOnSave": true,
    "typescriptHero.resolver.multiLineWrapThreshold": 120,

    // extension: Prettier
    "prettier.printWidth": 80,
    "prettier.tabWidth": 4,
    "prettier.singleQuote": true,
    "prettier.trailingComma": "none",
    "prettier.bracketSpacing": true,
    "prettier.semi": true,
    "prettier.useTabs": false
}
